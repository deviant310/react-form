{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "noEmitOnError": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "downlevelIteration": true
  },
  "exclude": ["./build"]
}
